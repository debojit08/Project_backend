@page "/editUser/{CurrentId}"
@using Resturent.Models
@inject UserService objUserService
@inject NavigationManager NavigationManager
<h3>AddUser</h3>
<form>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">User Name</label>
            <input type="text" class="form-control" @bind="objUser.UserName" placeholder="User Name">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Password</label>
            <input type="password" class="form-control" @bind="objUser.Password" placeholder="Password">
        </div>

        <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control" @bind="objUser.EmailId" placeholder="Email">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Email Password</label>
            <input type="password" class="form-control" @bind="objUser.EmailPass" placeholder="Email Password">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Mobile No.</label>
            <input type="number" class="form-control" @bind="objUser.MobileNo" placeholder="Mole Number">
        </div>



    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="inputPassword4">Is Admin</label>
            <label class="switch">
                <input type="checkbox" @bind="objUser.IsAdmin">
                <span class="slider round"></span>
            </label>
        </div>
        <div class="form-group col-md-3">
            <label for="inputPassword4">Is Active</label>
            <label class="switch">
                <input type="checkbox"  @bind="objUser.IsActive">
                <span class="slider round"></span>
            </label>
        </div>
        <div class="form-group col-md-3">
            <label for="inputPassword4">Status</label>
            <label class="switch">
                <input type="checkbox" @bind="objUser.Status">
                <span class="slider round"></span>
            </label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@UpdateUser" value="Update" />
                <input type="button" class="btn" @onclick="@Cancel" value="Cancel" />

            </div>
        </div>
    </div>
</form>


@code {
    [Parameter]
    public string CurrentId { get; set; }

    User objUser = new User();

    private DateTime mDate;
    protected override void OnInitialized()
    {
        mDate = DateTime.Now;
    }

    protected override async Task OnInitializedAsync()
    {
        objUser = await Task.Run(() => objUserService.GetUserById(Convert.ToInt32(CurrentId)));
    }

    void UpdateUser()
    {
        objUser.MDate = mDate;
        objUserService.Update(objUser);
        NavigationManager.NavigateTo("user");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("user");
    }
}
